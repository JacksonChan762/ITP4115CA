{% for post in posts %}
    <div class="container mt-4">
        <h2>{{ post.title }}</h2>
        <p><strong>Date:</strong> {{ post.timestamp.strftime('%Y-%m-%d %H:%M') }}</p>
        <p><strong>Author:</strong> {{ post.author }}</p>
        <div class="post-content">
            {{ post.content | safe }}
        </div>
    </div>
{% endfor %}