<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Search Results</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
</head>
<body>
    <h1>Search Results</h1>
    <form action="{{ url_for('search') }}" method="get">
        <input type="text" name="keywords" placeholder="Search products..." value="{{ keywords }}">
        <button type="submit">Search</button>
    </form>
    <div>
        {% if page_data.items %}
            <ul>
                {% for product in page_data.items %}
                    <li>
                        <h2>{{ product.name }}</h2>
                        <p>{{ product.description }}</p>
                        <p>Added on: {{ product.addtime.strftime('%Y-%m-%d %H:%M:%S') }}</p>
                    </li>
                {% endfor %}
            </ul>
            <!-- Pagination Controls -->
            <div>
                {% if page_data.has_prev %}
                    <a href="{{ url_for('search', page=page_data.prev_num, keywords=keywords) }}">Previous</a>
                {% endif %}
                <span>Page {{ page_data.page }} of {{ page_data.pages }}</span>
                {% if page_data.has_next %}
                    <a href="{{ url_for('search', page=page_data.next_num, keywords=keywords) }}">Next</a>
                {% endif %}
            </div>
        {% else %}
            <p>No products found.</p>
        {% endif %}
    </div>
</body>
</html>