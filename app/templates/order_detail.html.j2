{% extends "base.html.j2" %}
{% block app_content %}
    <div class="container mt-4">
        <h2>Order Details</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.order_name }}</td>
                        <td>{{ order.number }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">No details available for this order.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ url_for('order_list') }}" class="btn btn-primary">Back to Orders</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}