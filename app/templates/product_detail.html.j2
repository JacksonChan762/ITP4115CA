{% extends "base.html.j2" %}
{% block app_content %}
<div class="product-detail">
  <div class="row">
    <!-- 左側：產品圖片 -->
    <div class="col-md-6">
      <img src="{{ url_for('static', filename='thumbnails/' + product.image_filename) }}" alt="{{ product.name }}" class="img-fluid">
    </div>
    <!-- 右側：產品細節 -->
    <div class="col-md-6">
      <h1>{{ product.name }}</h1>
      <p>{{ product.description }}</p>
      <h3>價格：${{ product.price }}</h3>
      <!-- 加入購物車表單 -->
      <form action="{{ url_for('cart_add') }}" method="get">
          <input type="hidden" name="product_id" value="{{ product.id }}">
          <button class="btn btn-success" type="submit">加入到購物車</button>
      </form>
      <!-- 庫存信息 -->
      <h2>Inventory:</h2>
      <ul>
      {% for inventory in inventories %}
      <li>Shop: {{ inventory.shop.name }}, Quantity: {{ inventory.quantity }}</li>
      {% endfor %}
      </ul>
    </div>
  </div>
</div>
{% endblock %}