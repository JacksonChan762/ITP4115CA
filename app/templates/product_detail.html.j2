{% extends "base.html.j2" %}
{% block app_content %}
<div class="product-detail">
  <div class="row">
    <!-- 左側：產品圖片 -->
    <div class="col-md-6">
      <img src="{{ url_for('static', filename='thumbnails/' + product.image_filename) }}" alt="{{ product.name }}" class="img-fluid">
    </div>
    <!-- 右側：產品細節 -->
    <div class="col-md-6">
      <h2>{{ product.name }}</h2>
      <p>{{ product.description }}</p>
<form action="{{ url_for('cart_add') }}" method="get">
    <input type="hidden" name="product_id" value="{{ product.id }}">
    <button class="btn btn-success" type="submit">加入到購物車</button>
</form>
      <h3>價格：${{ product.price }}</h3>
    </div>
  </div>
</div>
{% endblock %}