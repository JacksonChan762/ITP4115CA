{% extends "base.html.j2" %}
{% block app_content %}
    <h1>Shops List</h1>

    {% if shop %}
    <ul>
        {% for s in shop %}
        <li>
            {{ s.desc }} - {{ s.tel }} - {{ s.email }} - {{ s.address }}
        </li>
        {% endfor %}
    </ul>
    {% else %}
    <p>No shops available.</p>
    {% endif %}
{% endblock %}