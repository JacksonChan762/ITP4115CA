{% extends "base.html.j2" %}
{% import 'bootstrap/wtf.html' as wtf %}

{% block app_content %}
<div class="container mt-4">
    <h2>购物车</h2>
    {% if cart %}
        <table class="table">
            <thead>
                <tr>
                    <th>商品名称</th>
                    <th>数量</th>
                    <th>单价</th>
                    <th>小计</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.number }}</td>
                    <td>{{ item.product.price | format_currency }}</td>
                    <td>{{ item.number * item.product.price | format_currency }}</td>
                    <td>
                        <a href="{{ url_for('cart_delete', id=item.product.id) }}" class="btn btn-danger btn-sm">删除</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="d-flex justify-content-between">
            <a href="" class="btn btn-warning">清空购物车</a>
            <a href="/checkout" class="btn btn-primary">去结算</a>
        </div>
    {% else %}
        <div class="alert alert-info" role="alert">
            您的购物车是空的！
        </div>
        <a href="/index" class="btn btn-secondary">继续购物</a>
    {% endif %}
</div>
{% endblock %}