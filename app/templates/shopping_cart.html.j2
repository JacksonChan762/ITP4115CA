{% extends "base.html.j2" %}
{% import 'bootstrap/wtf.html' as wtf %}

{% block app_content %}
<div class="container mt-4">
    <h2>Shopping Cart</h2>
    {% if cart %}
        <table class="table">
            <thead>
                <tr>
                    <td class="text-left name">Product Name</td>
                    <td class="text-left quantity">>Quantity</td>
                    <td class="text-right price">Unit Price</td>
                    <td class="text-right">Subtotal</td>
                    <td class="text-right">Action</td>
                </tr>
            </thead>
            <tbody>
                {% for item in cart %}
                <tr>
                    <td class="text-left name">{{ item.product.name }}</td>
                    <td class="text-left quantity">{{ item.number }}</td>
                    <td class="text-right price">{{ item.product.price | format_currency }}</td>
                    <td class="text-right total" value="{{item.goods.current_price * item.number}}">{{ item.number * item.product.price | format_currency }}</td>
                    <td class="text-center quantity">
                        <!-- Delete an individual product via GET request -->
                        <a href="{{ url_for('cart_delete', id=item.product.id) }}" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="d-flex justify-content-between">
            <!-- Empty the shopping cart, still using the GET method -->
            <a href="{{ url_for('cart_clear') }}" class="btn btn-warning">Empty Cart</a>
            <a href="/index" class="btn btn-secondary">Continue Shopping</a>
        </div>
        <div class="mt-3">
            <h4>Total: {{ total | format_currency }}</h4>
            <form action="{{ url_for('cart_order') }}" method="post">
                <button type="submit" class="btn btn-primary">Checkout</button>
            </form>
        </div>
    {% else %}
        <div class="alert alert-info" role="alert">
            Your shopping cart is empty!
        </div>
        <a href="/index" class="btn btn-secondary">Continue Shopping</a>
    {% endif %}
</div>
{% endblock %}