{% extends "base.html.j2" %}
{% block content %}

<div class="container-fluid">
    <div class="row">
        <!-- 左側：分類篩選 -->
        <div class="col-md-3">
            <h3>分類</h3>
            <ul class="nav flex-column">
                {% for supercat in supercats %}
                    {% if supercat.id == supercat.id %} 
                    <li>
                        <a href="{{ url_for('products', supercat_id=supercat.id) }}">{{ supercat.cat_name }}</a>
                        <ul>
                            {% for subcat in supercat.subcats %}
                            <li>
                                <a href="{{ url_for('products', subcat_id=subcat.id) }}">{{ subcat.cat_name }}</a>
                            </li>
                            {% endfor %}
                        </ul>
                    </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
        <!-- 右側：產品顯示 -->
        <div class="col-md-9">
            <!-- 顯示當前選擇的分類名稱 -->
            {% if supercat_name or subcat_name %}
            <h3 class="mt-3">
                {% if subcat_name %}
                {{ subcat_name }} (屬於 {{ supercat_name }})
                {% else %}
                {{ supercat_name }}
                {% endif %}
            </h3>
            {% else %}
            <h3 class="mt-3">所有產品</h3>
            {% endif %}
            <div class="row">
                {% for product in products %}
                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="{{ url_for('static', filename='thumbnails/' + product.image_filename) }}" alt="{{ product.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description }}</p>
                            <p class="card-text">價格：{{ product.price }}</p>
                            <a href="{{ url_for('product_detail', product_id=product.id) }}" class="btn btn-success">View Details</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% endblock %}