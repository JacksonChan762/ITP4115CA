{% extends "base.html.j2" %}
{% block app_content %}
<div class="products-list">
    <h2>Our Products</h2>
    {% if products %}
        <div class="row">
            {% for product in products %}
            <div class="col-md-4">
                <div class="product-item">
                    <h3>{{ product.name }}</h3>
                    <img src="{{ url_for('static', filename='thumbnails/' + product.image_filename) }}" alt="{{ product.name }}">
                    <p>{{ product.description }}</p>
                    <p><strong>Price:</strong> ${{ product.price }}</p>
                    <a href="{{ url_for('product_detail', product_id=product.id) }}" class="btn btn-primary">View Details</a>
                    <a href="{{ url_for('cart_add', product_id=product.id) }}" class="btn btn-success">Add to Cart</a>
                </div>
            </div>
            {% endfor %}
        </div>
    {% else %}
        <p>No products found.</p>
    {% endif %}
</div>
{% endblock %}