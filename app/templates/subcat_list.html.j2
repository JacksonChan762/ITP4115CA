<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subcategory List</title>
    <!-- Bootstrap CSS for styling and responsive design -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2>Subcategory List</h2>
        <a href="{{ url_for('subcat_add') }}" class="btn btn-primary mb-3">Add New Subcategory</a>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Super Category ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                    {% for subcat in subcats %}
                    <tr>
                        <td>{{ subcat.id }}</td>
                        <td>{{ subcat.cat_name }}</td>
                        <td>{{ subcat.supercat_id }}</td>
                        <td>
                            <form action="{{ url_for('subcat_del') }}" method="post">
                                <input type="hidden" name="id" value="{{ subcat.id }}">
                                <input type="submit" value="Delete">
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>